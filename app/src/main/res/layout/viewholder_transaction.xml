<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/transaction_background">

    <ImageView
        android:id="@+id/transaction_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_attach_money_24"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/transaction_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/transaction_icon"
        app:layout_constraintTop_toTopOf="@+id/transaction_icon"
        android:text="Spotify Premium"
        android:fontFamily="@font/inter_semibold"
        android:textColor="?attr/colorPrimary"
        android:textSize="18sp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/transaction_icon"
        app:layout_constraintTop_toBottomOf="@+id/transaction_subject"
        android:text="Yesterday, 4:30pm"
        android:fontFamily="@font/inter"
        android:textColor="@color/brown"
        android:textSize="13sp"
        android:layout_marginStart="15dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/transaction_icon"
        android:layout_marginStart="250dp"
        android:text="-$15"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:fontFamily="@font/inter_semibold"/>



</androidx.constraintlayout.widget.ConstraintLayout>